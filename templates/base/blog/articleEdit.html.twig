{% extends "base.html.twig" %}
{% block title %}Blog{% endblock %}

{% block stylesheets%}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">

{% endblock %}

{% block body %}
	
<h1 class="text-center mt-3 mb-5"><span class="souligne">Modifier l'article</span></h1>
	<a href="{{ path('articleSingle', {id: article.id}) }}" class="btn btn-primary mb-5" style="float:right">Voir l'article</a>
	
	<div class="row">
		<div class="col-md-12">
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
		{{ form_start(form) }}
			
			<div class="row">
				<div class="col-lg-12">
					{{ form_row(form.title) }}
					
					{{ form_row(form.text) }}
					
					<button type="submit" class="btn btn-success form-control" style="">Valider</button>
				</div>
			</div>
			
			
		{{ form_end(form) }}
		</div>
	</div>
	
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/script.js') }}"></script>
	
{% endblock %}